# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=unfs3
pkgver=0.9.22
pkgrel=2
pkgdesc="a user-space implementation of the NFSv3 server specification"
url="http://unfs3.sourceforge.net/"
#arch="all"
license='GPL'
depends=""
makedepends="flex libtirpc-dev"
source="http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz"
subpackages="$pkgname-doc"

build() {
	cd "$srcdir/$pkgname-$pkgver"

	export CFLAGS="$CFLAGS -I/usr/include/tirpc"
	export LIBS="$LIBS -ltirpc"

	./configure --prefix=/usr \
		--mandir=/usr/share/man
	make -j1 || return 1
	make DESTDIR="$pkgdir/" install
}

md5sums="ddf679a5d4d80096a59f3affc64f16e5  unfs3-0.9.22.tar.gz"
